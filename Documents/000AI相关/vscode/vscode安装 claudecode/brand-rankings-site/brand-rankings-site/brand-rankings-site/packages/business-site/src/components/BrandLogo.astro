---
// 品牌Logo组件 - 使用品牌名称生成文本Logo
interface Props {
  name: string;
  nameEn?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { name, nameEn, size = 'md' } = Astro.props;

// 生成Logo文本（优先使用英文名的首字母，否则使用中文名的前两个字）
const getLogoText = (name: string, nameEn?: string): string => {
  if (!name) return '??';

  if (nameEn) {
    // 如果有英文名，取首字母（最多2个）
    const words = nameEn.split(' ').filter(w => w.length > 0);
    if (words.length >= 2) {
      return (words[0][0] + words[1][0]).toUpperCase();
    }
    return nameEn.substring(0, 2).toUpperCase();
  }
  // 如果只有中文名，取前两个字
  return name.substring(0, 2);
};

// 根据品牌名称生成颜色（使用简单的哈希算法）
const getLogoColor = (name: string): string => {
  if (!name) return 'from-gray-500 to-gray-600';

  const colors = [
    'from-blue-500 to-blue-600',
    'from-green-500 to-green-600',
    'from-purple-500 to-purple-600',
    'from-pink-500 to-pink-600',
    'from-indigo-500 to-indigo-600',
    'from-red-500 to-red-600',
    'from-orange-500 to-orange-600',
    'from-teal-500 to-teal-600',
    'from-cyan-500 to-cyan-600',
    'from-emerald-500 to-emerald-600',
  ];

  let hash = 0;
  for (let i = 0; i < name.length; i++) {
    hash = name.charCodeAt(i) + ((hash << 5) - hash);
  }

  return colors[Math.abs(hash) % colors.length];
};

const logoText = getLogoText(name, nameEn);
const colorClass = getLogoColor(name);

// 尺寸映射
const sizeClasses = {
  sm: 'w-10 h-10 text-xs',
  md: 'w-14 h-14 text-sm md:w-16 md:h-16 md:text-base',
  lg: 'w-20 h-20 text-lg',
  xl: 'w-32 h-32 text-2xl md:w-40 md:h-40 md:text-3xl'
};
---

<div
  class={`${sizeClasses[size]} bg-gradient-to-br ${colorClass} rounded-lg flex items-center justify-center shadow-sm`}
  title={name}
>
  <span class="font-display font-bold text-white">
    {logoText}
  </span>
</div>
